
page, .page {
  height: 100%;
  font-family: 'PingFang SC',
               'Helvetica Neue',
               Helvetica,
               'Droid Sans Fallback',
               'Microsoft Yachei',
               sans-serif;
}

/* 侧边栏样式 */
.page-slidebar {
  height: 100%;
  width: 750rpx;
  position: fixed;
  background-color:white;
  z-index: 0;
}

.text_time{
  width: 100%;
  height: 70rpx;
  border-bottom: 1rpx solid rgb(230, 230, 230);
}
.time{
  margin: 10rpx 20rpx;
  font-size: 12pt;
 
}

/* 控制侧边栏的内容距离顶部的距离 */
.page-content {
  padding-top: 60rpx;
}

/* 侧边栏内容的 css 样式 */
.wc {
  color:black;
  padding: 20rpx 0 20rpx 180rpx;
  border-bottom: 1px solid #eee; 
}

.c-state {
  transform: rotate(0deg) scale(1) translate(60%, 0%);
  -webkit-transform: rotate(0deg) scale(1) translate(60%, 0%);
}


/* 侧边栏样式 */


.filtrate {
  position: fixed;
  height: 100%;
  width: 100%;
  top: 0;
  left: 0;
  /* z-index: 999; */
  display: flex;
}



.btn {
  position: absolute;
  bottom: 0;
  width: 70%;
  height: 160rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #fff9f9;
  z-index: 999
}

.btn>view {
  display: flex;
  width: 60%;
  height: 60rpx;
}

.btn>view view {
  width: 50%;
  text-align: center;
  line-height: 60rpx;
  font-size: 24rpx;
}

.btn>view view:first-child {
  border-radius: 40rpx 0 0 40rpx;
  background: linear-gradient(to right, #82b3eb , #568fd1);
  color: white;
}

.btn>view view:last-child {
  border-radius: 0 40rpx 40rpx 0;
  /* margin-left: 80rpx; */
  /* border-radius:40rpx; */
  background: linear-gradient(to right, #3c7ac2 , #2063af);
  color: white;
}








/* 主页样式 */
.page-top {
  height: 100%;
  position: fixed;
  width: 750rpx;
  background-color:white;
  z-index: 0;
  transition: All 0.4s ease;
  -webkit-transition: All 0.4s ease;
}

.content image{ 
  width: 30rpx;
  height: 30rpx;
  margin: auto 10rpx auto 20rpx;
}
.txt{
  width: 750rpx;
  flex-direction: row; 

}
.text_left{
  display: flex;
  position: absolute;
  float: left;
  color: #2063af;
}
.text_right{
  display: flex;
  position: relative;
  float: right;
  justify-items: right;
  margin: 0 10rpx;
  
}


/* 遮盖层样式 */
.cover{
  width: 100%;
  height: 100%;
  background-color:gray;
  opacity: 0.5;
  z-index: 9000;
}
.content{
  width: 750rpx;
  height: 70rpx;
  display: flex;
  line-height: 70rpx;
  background-color: rgb(247, 246, 246);
}





